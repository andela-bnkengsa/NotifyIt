<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  	<TextView
        android:id="@+id/notifications_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications Details" />
  	<Button
        android:id="@+id/set_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message" />
    <Button
        android:id="@+id/set_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time" />
    <Button
        android:id="@+id/set_via_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send via" />
 	<Button
        android:id="@+id/set_repeat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat" />
</LinearLayout>